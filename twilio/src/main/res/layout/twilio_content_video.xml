<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <info.learncoding.twiliovideocall.ui.participant.ParticipantPrimaryView
        android:layout_width="match_parent"
        android:id="@+id/primary_video"
        android:layout_height="match_parent"
        app:tviScaleType="fill" />

    <androidx.recyclerview.widget.RecyclerView
        tools:itemCount="1"
        tools:listitem="@layout/twilio_participant_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:id="@+id/remote_video_thumbnails"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
</FrameLayout>